{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"complexity": {
				"useLiteralKeys": "off"
			}
		},
		"ignore": [
			"projects/**/*"
		]
	},
	"overrides": [
		{
			"include": [
				"*.ts"
			],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "error"
					},
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"include": [
				"*.html"
			]
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "none"
		}
	}
}